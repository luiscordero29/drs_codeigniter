{% extends "layouts/auth.twig" %}
{% block content %}
  <!-- /.login-logo -->
  	<div class="card">
    	<div class="card-body login-card-body">
      		<p class="login-box-msg">Iniciar Sessión</p>
			{{ form_open('/auth/login', data['form_attributes']) }}
				<div class="form-group">
					<label for="cedula_identidad">Cédula de Identidad</label>					
					<input name="cedula_identidad" type="text" class="form-control {% if data['has_cedula_identidad']  %}is-invalid{% endif %}" id="cedula_identidad" value="{{ set_value('cedula_identidad') }}">
					{{ form_error('cedula_identidad', '<div class="invalid-feedback">', '</div>') }}
				</div>
                <div class="form-group">
					<label for="email">E-mail ó Cédula de Identidad</label>					
					<input name="email" type="text" class="form-control {% if data['has_email']  %}is-invalid{% endif %}" id="email" value="{{ set_value('email') }}">
					{{ form_error('email', '<div class="invalid-feedback">', '</div>') }}
				</div>
				<div class="form-group">
					<label for="password">Contraseña</label>
					<input type="password" class="form-control {% if data['has_password']  %}is-invalid{% endif %}" id="password">
					{{ form_error('password', '<div class="invalid-feedback">', '</div>') }}
				</div>
                <div class="form-group">
					<label for="confirm">Confirmar contraseña</label>
					<input type="password" class="form-control {% if data['has_confirm']  %}is-invalid{% endif %}" id="confirm">
					{{ form_error('confirm', '<div class="invalid-feedback">', '</div>') }}
				</div>
				<div class="row">
					<div class="col-6">
						<a href="{{ site_url('/auth/register') }}" class="btn btn-light btn-block btn-flat">Crear cuenta</a>
					</div>
					<div class="col-6">
						<button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
					</div>
				</div>
			{{ form_close() }}
			<p class="mt-3">
				<a href="#">¿Olvidaste tu cuenta?</a>
			</p>
    	</div>
    </div>
{% endblock %}